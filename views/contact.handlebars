                    <div class="col">
                        <label for="name">First Name</label>
                        <input type="text" id="firstName" placeholder="First name">
                    </div>
                    <div class="col">
                        <label for="name">Last Name</label>
                        <input type="text" id="lastName" placeholder="Last name">
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col">
                        <label for="exampleFormControlInput1">Email address</label>
                        <input type="email" id="email" id="exampleFormControlInput1" placeholder="name@example.com">
                    </div>
                    <div class="col">
                        <label for="phoneNumber">Phone Number</label>
                        <input type="number" id="phoneNumber" placeholder="(XXX)-XXX-XXXX">
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col">
                        <label for="details">Comments</label>
                        <textarea class="form-control" id="details" rows="3"></textarea>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col">
                        <button type="button" class="btn btn-primary btn-lg btn-block" id="submitContact">Submit</button>
