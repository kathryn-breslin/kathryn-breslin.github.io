<div id="contact-background">
    <div class="jumbotron jumbotron-fluid" id="contactBackground">
        <div class="container-fluid text-center" id="contact-nav">
            <div class="row">
                <div class="col-4">
                    <button class="btn btn-light" id="index-button">Home</button>
                </div>
                <div class="col-4">
                    <button class="btn btn-light" id="portfolio-button">Work</button>
                </div>
                <div class="col-4">
                    <button class="btn btn-light" id="contact-button">Contact</button>
                </div>
            </div>
        </div>
        <div class="container">
            <h1 id="contact">Hey</h1>
        </div>
    </div>
</div>

<div id="contact-jumbo">
    <div class="row">
        <div class="col-12" id="contactForm">
            <h1 id="helloContact"> Say Hello </h1>
            <form align="center">
                <div class="row">
                    <div class="col">
                        <label for="name">First Name</label>
                        <input type="text" id="firstName" placeholder="First name">
                    </div>
                    <div class="col">
                        <label for="name">Last Name</label>
                        <input type="text" id="lastName" placeholder="Last name">
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col">
                        <label for="exampleFormControlInput1">Email address</label>
                        <input type="email" id="email" id="exampleFormControlInput1" placeholder="name@example.com">
                    </div>
                    <div class="col">
                        <label for="phoneNumber">Phone Number</label>
                        <input type="number" id="phoneNumber" placeholder="(XXX)-XXX-XXXX">
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col">
                        <label for="details">Comments</label>
                        <textarea class="form-control" id="details" rows="3"></textarea>
                    </div>
                </div>
                <br>
                <div class="row" id="submit">
                    <div class="col">
                        <button type="button" class="btn btn-primary btn-lg btn-block" id="submitContact">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
